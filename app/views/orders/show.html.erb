 <header class="page-header">
    <h1>You ordered</h1>
  </header>
   <div class="panel panel-default items">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Product</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
      <% @line_items.each do |item| %>
        <%= render 'item', item: item %>
      <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="4">
            TOTAL:
          </th>
          <th>
            <%= @total %>
          </th>
        </tr>
        <tr>
          <th colspan="4">
            EMAIL:
          </th>
          <th>
            <%= current_user.email %>
          </th>
        </tr>
      </tfoot>
    </table>
  </div>
